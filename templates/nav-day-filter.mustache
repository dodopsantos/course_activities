{{!
    @template block_course_activities/nav-day-filter

    This template renders the day range selector for the course activities view.

    Example context (json):
    {}
}}
<div data-region="course-filter" class="dropdown">
    <button type="button" class="btn btn-outline-secondary dropdown-toggle icon-no-margin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            aria-label="{{#str}} ariadayfilter, block_course_activities {{/str}}" aria-controls="menucoursefilter">
        Selecione um curso
    </button>
    <div id="menucoursefilter" role="menu" class="dropdown-menu" data-show-active-item data-skip-active-class="true">
        {{#selectorcourse}}
            <a
                class="dropdown-item"
                href="#"
                data-from="-14"
                data-action="more-courses"
                data-filtername="{{datafilter}}"
                {{#course}}aria-current="true"{{/course}}
                aria-label="{{#str}} ariadayfilteroption, block_course_activities, {{#str}} all, core {{/str}}{{/str}}"
                role="menuitem"
            >
                {{name}}
            </a>
        {{/selectorcourse}}
    </div>
</div>
