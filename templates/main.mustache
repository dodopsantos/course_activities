{{!
    @template block_course_activities/main

    This template renders the main content area for the course activities block.

    Example context (json):
    {}
}}

<div id="block-course-activities-{{uniqid}}" class="block-course-activities" data-region="course-activities">
    <div class="container p-0 pb-3 border-bottom">
        <div class="row no-gutters">
            <div class="col-sm d-flex justify-content-center">
                {{> block_course_activities/nav-day-filter }}
            </div>
        </div>
    </div>
    <div class="container p-0">
        {{> block_course_activities/view }}
    </div>
</div>
{{#js}}
require(
[
    'jquery',
    'block_course_activities/main',
],
function(
    $,
    Main
) {
    var root = $('#block-course-activities-{{uniqid}}');
    Main.init(root);
});
{{/js}}
