{{!
    @template block_course_activities/view

    This template renders the course activities view for the course activities block.

    Example context (json):
    {
        "midnight": 1538954668,
        "coursepages": [
            {}
        ],
        "urls": {
            "nocourses": "#",
            "noevents": "#"
        },
        "sortcourseactivitiesdates": true,
        "sortcourseactivitiescourses": false,
        "selectedfilter": "all",
        "hasdaysoffset": true,
        "hasdayslimit": false,
        "nodayslimit": true,
        "all": true,
        "overdue": false,
        "next7days": false,
        "next30days": false,
        "next3months": false,
        "next6months": false,
        "daysoffset": -14,
        "dayslimit": false,
        "limit": 0
    }
}}
<div data-region="course-activities-view">
    <div class="tab-content">
        <div class="tab-pane {{#sortcourseactivitiesdates}}active show{{/sortcourseactivitiesdates}} fade" data-limit="{{limit}}" data-region="view-dates" id="view_dates_{{uniqid}}">
            {{> block_course_activities/view-dates }}
        </div>
        <div
            class="tab-pane {{#sortcourseactivitiescourses}}active show{{/sortcourseactivitiescourses}} fade"
            data-region="view-courses"
            data-midnight="{{midnight}}"
            data-limit="2"
            data-offset="0"
            data-days-limit="{{dayslimit}}"
            data-course="{{selectedcourse}}"
            data-days-offset="0"
            data-no-events-url="{{urls.noevents}}"
            id="view_courses_{{uniqid}}"
        >
            {{> block_course_activities/view-courses }}
        </div>
    </div>
</div>